<div ng-app="AngulaRails" ng-controller="GamesController" ng-init="init()">
  <h1>Games</h1>

  <%= link_to 'New Game', new_game_path, class: "btn btn-default" %>
  
  <ul class="pagination">
  	<!--- <li><a ng-click="setPage(currentPage - 1)">back</a></li>--->
  	<li><%= link_to '&laquo;'.html_safe, '#', 'ng-click' => 'setPage(currentPage - 1)' %></li>
  	<li><%= link_to '&raquo;'.html_safe, '#', 'ng-click' => 'setPage(currentPage + 1)' %></li>
  </ul>

  <table class="table">
	<thead>
	  <tr>
	    <th>Name</th>
	  </tr>
	</thead>
	
	<tbody>
	  <tr ng-repeat="game in games">
	    <td>{{ game.name }}</td>
	  </tr>
	</tbody>
  </table>
</div>